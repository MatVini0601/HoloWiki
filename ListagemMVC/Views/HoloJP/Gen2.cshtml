@model IEnumerable<ListagemMVC.Models.HoloJP>
@{
    ViewData["Title"] = "Generation 2";
}

<section id="2nd Generation">
    <h3>2nd Generation</h3>
    <h6>hololive 2nd Generation (ホロライブ2期生) is the second wave of VTubers under Hololive.</h6>
    <ul style="" class="cards">
        @foreach (var talent in Model)
        {
            <li>
                <a href="@talent.Channel" class="card">
                    <img src="@talent.Image" class="card__image" alt="" />
                    <div class="card__overlay">
                    <div class="card__header">
                        <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
                        <div class="card__header-text">
                        <h3 class="card__title">@talent.Nome - <label>@talent.NickName</label></h3>            
                        <span class="card__status">Debuted in @talent.DebutDate at @talent.Unit</span>
                        </div>
                    </div>
                    <p class="card__description">@Html.Raw(@talent.Description)</p>
                    </div>
                </a>      
            </li>
        }
    </ul>
</section>
<div>
    <p>Saiba mais <a href="https://virtualyoutuber.fandom.com/wiki/Hololive">Hololive Fandom</a>.</p>
</div>

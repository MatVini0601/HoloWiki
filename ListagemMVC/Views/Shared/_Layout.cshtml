<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cards.css" />
    <link rel="stylesheet" href="~/ListagemMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="font-size:24px" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hololive Talents</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdown">
                                <div class="dropbtn"> 
                                    <a class="nav-link text-dark" asp-controller="HoloEN" asp-action="About">HoloEN</a>
                                </div>
                                <div class="dropdown-content">
                                    <a asp-area="" asp-controller="HoloEN" asp-action="HoloMyth">Myth</a>
                                    <a asp-area="" asp-controller="HoloEN" asp-action="HoloCouncil">Council</a>
                                    <a asp-area="" asp-controller="HoloEN" asp-action="ProjectHOPE">HOPE</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <div class="dropbtn">
                                     <a class="nav-link text-dark" asp-area="" asp-controller="HoloJP" asp-action="About">Holo JP</a>
                                </div>
                                <div class="dropdown-content">
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen0">Generation 0</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen1">Generation 1</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen2">Generation 2</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen3">Fantasy</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gamers">GAMERS</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen4">Force</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen5">Five</a>
                                    <a asp-area="" asp-controller="HoloJP" asp-action="Gen6">Secret Society</a>
                                </div>

                            </div>
                           
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ListagemMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
